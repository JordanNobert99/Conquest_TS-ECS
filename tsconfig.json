{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": [ "ES2020", "DOM" ],
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "allowJs": true,
    "checkJs": false,
    "types": [ "vite/client" ]
  },
  "include": [
    "TS_ECS/**/*.ts",
    "TS_ECS/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}